{
  "extends": "airbnb-base",
  "rules": {
    "space-before-function-paren": ["error", "always"],
    "no-multi-spaces": ["error", { "exceptions": {
      "VariableDeclarator": true,
      "ImportDeclaration": true
    }}],
    "no-underscore-dangle": ["error", { "allow": ["foo_", "_bar"] }],
    "no-param-reassign": 0
  }
}
